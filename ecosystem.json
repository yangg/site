{
  apps: {
    name: "site",
    script: "index.js",
    env:
      { NODE_ENV: "development" },
    env_production:
      { NODE_ENV: "production" }
  },

  deploy : {
    production : {
      user : "brook",
      host : "uedsky.com",
      port:  "1223",
      ref  : "origin/master",
      repo : "https://github.com/yangg/site.git",
      path : "/var/www/uedsky.site",
      "post-deploy" : "npm install --production && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
